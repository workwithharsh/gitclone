{
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "overrides": [
        {
            "files": "*.tsx",
            "options": {
                "printWidth": 100
            }
        },
        {
            "files": "*.json",
            "options": {
                "printWidth": 200
            }
        }
    ],
    "plugins": [
        "prettier-plugin-tailwindcss"
    ]
}